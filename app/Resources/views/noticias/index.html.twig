{% extends 'base.html.twig' %}

{% block article %}
    
	{% block sidebar %}
		<div class="row sidebar">
							
			<!-- Campo de busca -->
			<div class="col-md-6 col-xs-7 col-lg-5">
				<form>				
					<div class="input-group">
					  <span class="input-group-addon"> <span class="glyphicon glyphicon-search"></span> </span>
					  <input type="text" name="busca" class="form-control" placeholder="Digite o que você procura e tecle enter">
					</div>		
				</form>
			</div>
							
		</div>
	{% endblock %}
	
	<div class="both"></div>

	{% if pagination.getTotalItemCount == 0 %}
		<div class="alert alert-info">Não há notícias cadastradas no momento. Por favor, volte mais tarde.</div>
	{% else %}
		{# LISTAGEM DE REGISTROS #}
			{% for noticia in pagination %}
				
				<div class="news-box">
					<h2><a href="{{ path('noticias_detalhes') }}/{{ noticia.id }}" title="Ver notícia completa">{{ noticia.titulo }}</a></h2>
					<p class="news-datetime">Em {{ noticia.getPublicadaEm|date("d/m/Y \\à\\s H:i") }}</p>
					<p>{{ noticia.texto }}</p>
				 </div>

			{% endfor %}
		{# LISTAGEM DE REGISTROS #}
		
		{# PAGINATION #}
			<div class="nav-pagination">
			    {{ knp_pagination_render(pagination) }}
			</div>
		{# PAGINATION #}
	{% endif %}
{% endblock %}
