<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <!-- Navegador obsoleto para o IE < 9 -->
        <!--[IF lt IE 9]> <script type="text/javascript">location="http://browsehappy.com/"</script> <![endif]-->

        <title>{% block title %}{{ title }} - Unimed Volta Redonda{% endblock %}</title>
        
        {% block stylesheets %}
            <link rel="stylesheet" type="text/css" href="{{ asset('css/minify/bootstrap.css') }}"/>
            <link rel="stylesheet" type="text/css" href="{{ asset('css/source/app.css') }}"/>
        {% endblock %}

        <link href="{{ asset('favicon.png') }}" rel="icon" sizes="64x64">
        <link href="{{ asset('favicon.ico') }}" rel="shortcut icon" type="image/x-icon" />
    </head>
    <body>
        {% block header %}            
            <header class="navbar navbar-default navbar-fixed-top hidden-380" role="navigation">
                <div class="container">
                
                    <!-- Logotipo -->
                    <div id="logotipo" class="pull-left">
                        <a href="{{ path('noticias_home') }}"><img src="{{ asset('img/logotipoUnimed.png') }}" alt="Unimed Volta Redonda" title="Unimed Volta Redonda"/></a>
                    </div>
                    
                    <!-- Botão responsivo -->
                    <div class="mainmenu">
                    
                        <div class="navbar-header">
                          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="sr-only">Menu</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                          </button>
                        </div>
                        
                        <!-- Menu principal -->
                        <nav class="collapse navbar-collapse">
                            <ul class="nav navbar-nav" id="mainmenu">                       
                                
                                <li><a href="{{ path('noticias_home') }}" class="btn btn-success">Notícias</a></li>
                                <li><a href="{{ path('noticias_home') }}" class="btn-collapse">Notícias</a></li>
                                <li><a href="{{ path('categorias_list') }}">Categorias</a></li>
                                

                                {% if app.user and is_granted('IS_AUTHENTICATED_FULLY') %}
                                    <li class="dropdown">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown">Cadastros <b class="caret"></b></a>
                                        <ul class="dropdown-menu dropdown-menu-arrow">
                                            <li><a href="#">Notícias</a></li>
                                            <li><a href="#">Categorias</a></li>

                                            {% if is_granted('ROLE_ADMIN') %}
                                                <li><a href="#">Contas de Usuário</a></li>
                                            {% endif %}
                                        </ul>
                                    </li>

                                    {% if is_granted('ROLE_ADMIN') %}
                                        <li><a href="#">Logs</a></li>
                                    {% endif %}

                                {% else %}
                                    <li><a href="{{ path('login_route') }}">Login</a></li>
                                {% endif %}

                                <li><a href="#">Sair</a></li>

                            </ul>
                        </nav>
                        
                    </div>
                  
                </div>
            </header>            
        {% endblock %}

        
        {% block body %}
            <!-- Container -->
            <section class="container">
        
                {% block container_header %}
                    <header>
                        <h1>{{ title }}</h1>
                    </header>
                {% endblock %}

                <article>
                    {% block article %}{% endblock %}
                </article>

            </section>
        {% endblock %}

        {% block footer %}
            <div class="both"></div> <br />
            <footer class="hidden-xs">
                <section class="container">
                    <p class="text-muted">
                        © Copyright {{ "now"|date("Y") }} - Case desenvolvido para o processo seletivo da Unimed Volta Redonda
                    </p>
                </section>
            </footer>            
        {% endblock %}        

        {% block javascripts %}
            <script type="text/javascript" src="{{ asset('js/minify/jquery.js') }}"></script>
            <script type="text/javascript" src="{{ asset('js/minify/bootstrap.js') }}"></script>
            <script type="text/javascript" src="{{ asset('js/minify/bootbox.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('js/source/bootstrap-hover-dropdown.js') }}"></script>
            <script type="text/javascript" src="{{ asset('js/source/app.js') }}"></script>
        {% endblock %}
    </body>
</html>
